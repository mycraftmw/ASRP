<Window x:Class="AdvancedSubwayRoutePlanning.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedSubwayRoutePlanning"
        mc:Ignorable="d"
        Title="错误" Height="100" Width="150" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="textBlock_Msg" TextWrapping="Wrap" HorizontalAlignment="Center" Text="" Grid.Row="0" VerticalAlignment="Center"/>
        <Button x:Name="button_Confirm" Content="确认" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="75" Click="button_Confirm_Click"/>

    </Grid>
</Window>
